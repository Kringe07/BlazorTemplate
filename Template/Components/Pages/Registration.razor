@page "/Registration"
@inject IToastService ToastService

<div class="Login-card">
    <h2>Registration</h2>
    <EditForm FormName="Registration" OnValidSubmit="Register" Model="Auth">
        <DataAnnotationsValidator />
        <div>
            <ValidationMessage For="() => Auth.Email" />
            <label>Email</label>
            <input type="email" @bind-value="Auth.Email" placeholder="Email" />
        </div>
        <div>
            <ValidationMessage For="() => Auth.Password" />
            <label>Password</label>
            <input type="password" @bind-value="Auth.Password" placeholder="Password" />
        </div>
        <div>
            <ValidationMessage For="() => Auth.CPassword" />
            <label>Confirm Password</label>
            <input type="password" @bind-value="Auth.CPassword" placeholder="Confirm Password" />
        </div>
        <button type="submit" class="btn btn-primary btn-block">Register</button>
    </EditForm> 
</div> 
